<style lang="scss">
  .blobs {
    margin: auto;
    display: grid;
    width: 100%;
    grid-template-columns: repeat(12, 1fr);
    transform: scale(1.1);
    transform-origin: center;
    grid-row: 1;
    grid-column: 1;

  }

  .blob-1 {
    grid-column: 1 / span 6;
    fill: var(--teal);
  }

  .blob-2 {
    grid-column: 5 / span 6;
    z-index: 1;
    fill: var(--blue);
  }

  .blob-3 {
    grid-column: 8 / span 6;
    fill: var(--yellow);
  }

  .blob-4 {
    grid-column: 2 / span 6;
    fill: var(--yellow);
    transform:rotateX(180deg) rotateY(180deg)
  }

  .blob-5 {
    grid-column: 4 / span 6;
    fill: var(--teal);
  }

  .blob-6 {
    grid-column: 6 / span 6;
    fill: var(--teal);
  }

  .blob-7 {
    grid-column: 9 / -1;
    fill: var(--yellow);
  }

  [class^="blob-"] {
    grid-row: 1;
    opacity: 0.9;
    max-height: 300px;
  }
</style>
